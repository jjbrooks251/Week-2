
public class Person {

	public static void main(String[] args) {

		Person info = new Person();

		// info.name("Ben");
		// info.age(18);
		// info.Job("Student");

		info.combo("Ben", 18, "Student");
	}

	private String name(String word) {

		String Firstname = word + ", ";

		return Firstname;
	}

	private String age(int num) {

		String age = Integer.toString(num);

		return age;

	}

	private String Job(String title) {

		String Occupation = ", " + title;

		return Occupation;
	}

	private String combo(String name, int age, String job) {

		String s = "er";

		System.out.println(this.name(name) + this.age(age) + this.Job(job));

		return s;

	}

}
