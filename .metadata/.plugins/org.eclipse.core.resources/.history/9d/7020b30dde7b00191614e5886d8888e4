
public class Person {

	public static void main(String[] args) {

		Person info = new Person();

		System.out.print(info.name("Ben"));
		System.out.print(info.age(18));
		System.out.println(info.Job("Student"));
	}

	private String name(String word) {

		String Firstname = word + ", ";

		return Firstname;
	}

	private String age(int num) {

		String age = Integer.toString(num);

		return age;

	}

	private String Job(String title) {

		String Occupation = ", " + title;

		return Occupation;
	}

	private String combo() {

		String s = "er";

		System.out.println(this.name("Ben") + this.age(18) + this.Job("Student"));

		return s;

	}

}
