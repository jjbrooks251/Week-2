
public class Person {

	public static void main(String[] args) {

		Person info = new Person();

		info.name("Ben");
		info.age(18);
		info.Job("Student");
	}

	private String name(String word) {

		String Firstname = word + ", ";

		return Firstname;
	}

	private int age(int age) {

		return age;

	}

	private String Job(String title) {

		String Occupation = " , "title;

		return Occupation;
	}

}
